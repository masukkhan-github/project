<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="container">
      <div class="row  row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let list of allListings) { %>
          <a href="/listings/<%=list.id%>" class="listing-link">
          <div class="col">
            <div class="card" >
              <img src="<%= list.image %>" class="card-img-top" alt="WanderLust_image" style="height: 20rem;">
              <div class="card-img-overlay">abc</div>
              <div class="card-body">
                <p class="card-text">
                  <b><%= list.title %></b> <br>
                  &#8377;<%= list.price.toLocaleString("en-IN") %> / night
                </p>
              </div>
            </div>
          </div>
          </a>
        <% } %>
      </div>
    </div>
</body>
